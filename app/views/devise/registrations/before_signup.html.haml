.signin
  = render "devise/shared/header"
  .signup__panel
    .signup__panel__title
      %h2 新規会員登録
    .signup__panel__field
      = button_to new_user_registration_path, class: "btn email-btn" do
        = fa_icon "envelope"
        メールアドレスで登録
      = button_to "", class: "btn facebook-btn" do
        = fa_icon "facebook-square"
        Facebookで登録
     
      = button_to "", class: "btn google-btn" do
        = fa_icon "google"
        Googleで登録

  = render "devise/shared/footer"