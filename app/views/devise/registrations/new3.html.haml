.wrapper
  .signup__header
    .signup__header__mercari-logo
      = link_to image_tag("logo.svg"), root_path
    .signup__header__progress
      %ul.progress
        %li.through
          会員情報
          .bubble.bubble-first
        %li.through
          電話番号認証
          .bubble
        %li.active
          お届け先住所入力
          .bubble
        %li
          支払い方法
          .bubble
        %li
          完了
          .bubble.bubble-last
  .signup__panel
    .signup__panel__title
      %h2 住所入力
    .signup__panel__field.signup__panel__field
      .field
        %label 郵便番号
        %span.required 必須
        %br/
        %input{type: "text", placeholder: "例）123-4567"}
        %br/
      .field
        %label 都道府県
        %span.required 必須
        %br/
        %input{type: "text", placeholder: "例）高知県"}
        %br/
      .field
        %label 市区町村
        %span.required 必須
        %br/
        %input{type: "text", placeholder: "例）横浜市緑区"}
        %br/
      .field
        %label 番地
        %span.required 必須
        %br/
        %input{type: "text", placeholder: "例）青山1-1-1"}
        %br/
      .field
        %label 建物名
        %span.optional 任意
        %br/
        %input{type: "text", placeholder: "例）柳ビル103"}
        %br/
      .field
        %label 電話番号
        %span.optional 任意
        %br/
        %input{type: "text", placeholder: "例）09012345678"}
        %br/
      .actions
        = button_to "次へ進む", new4_user_registration_path, method: :get, class: "btn action-btn"
  = render "devise/shared/footer"
