.signin
  = render "devise/shared/header"
  .signin__panel
    .signin__panel__signup
      %p アカウントをお持ちでない方はこちら
      = button_to "新規会員登録", before_signup_user_registration_path, class: "signup-btn"
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .signin__panel__field
        = button_to new_user_registration_path, class: "btn facebook-btn" do
          %span.facebook-icon
            = fa_icon "facebook-square"
          Facebookでログイン
        = button_to new_user_registration_path, class: "btn google-btn" do
          %span.google-icon
            = fa_icon "google"
          Googleでログイン
        .field
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"
        .field
          = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード"
        .actions
          = f.submit "ログイン", class: "btn action-btn"
        = link_to "パスワードをお忘れの方", new_user_registration_path, class: "terms__link"
  = render "devise/shared/footer"