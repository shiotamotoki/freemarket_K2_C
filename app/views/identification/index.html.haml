//本人確認ページのビュー
.container
  = render "shared/top_page/header"
  %nav.bread-crumbs
    %ul
      %li
        %a{href: "#"}
          %span
            メルカリ
        = fa_icon 'chevron-right',class:'arrow-icon'
      %li
        %a{href: "#"}
          %span
            マイページ
        = fa_icon 'chevron-right',class:'arrow-icon'
      %li
        %a{href: "#"}
          %span
            本人情報の登録
  %main.main-block
    .right-content
      %section.right-content__identification
        %h2.right-content__identification__head
          本人情報の登録
        = form_with model: @personal_informations,  local: true, class: "right-content__identification__body" do |f|
          .right-content__identification__body__description
            %p 
              お客さまの本人情報をご登録ください。
              %br
              登録されたお名前・生年月日を変更する場合、本人確認書類の提出が必要になります。
            %p.right-content__identification__body__description__text-right
              %a{href: "#", target: "_blank"}
                本人確認書類のアップロードについて
                = fa_icon 'chevron-right',class:'arrow-icon'
          .right-content__identification__body__form-group
            = f.label "お名前"
            %p
              名前
          .right-content__identification__body__form-group
            = f.label "お名前カナ"
            %p
              ナマエ
          .right-content__identification__body__form-group
            = f.label "生年月日"
            %p
              2000/04/01
          .right-content__identification__body__form-group
            = f.label "郵便番号"
            %span.right-content__identification__body__form-group__arbitrary 任意
            = f.text_field :postal_code, placeholder: "例）1234567", class: "right-content__identification__body__form-group__input"
          .right-content__identification__body__form-group
            = f.label "都道府県"
            %span.right-content__identification__body__form-group__arbitrary 任意
            .right-content__identification__body__form-group__select-wrap
              = fa_icon "chevron-down", class:"arrow-down-icon"
              = f.select :prefecture, [["--", "--"], ["北海道", "北海道"], ["青森県", "青森県"], ["岩手県", "岩手県"], ["宮城県", "宮城県"], ["秋田県", "秋田県"], ["山形県", "山形県"], ["福島県", "福島県"], ["東京都", "東京都"], ["神奈川県", "神奈川県"], ["埼玉県", "埼玉県"], ["千葉県", "千葉県"], ["茨城県", "茨城県"], ["栃木県", "栃木県"], ["群馬県", "群馬県"], ["山梨県", "山梨県"], ["新潟県", "新潟県"], ["長野県", "長野県"], ["富山県", "富山県"], ["石川県", "石川県"], ["福井県", "福井県"], ["愛知県", "愛知県"], ["岐阜県", "岐阜県"], ["静岡県", "静岡県"], ["三重県", "三重県"], ["大阪府", "大阪府"], ["兵庫県", "兵庫県"], ["京都府", "京都府"], ["滋賀県", "滋賀県"], ["奈良県", "奈良県"], ["和歌山県", "和歌山県"], ["鳥取県", "鳥取県"], ["島根県", "島根県"], ["岡山県", "岡山県"], ["広島県", "広島県"], ["山口県", "山口県"], ["徳島県", "徳島県"], ["香川県", "香川県"], ["愛媛県", "愛媛県"], ["高知県", "高知県"], ["福岡県", "福岡県"], ["佐賀県", "佐賀県"], ["長崎県", "長崎県"], ["熊本県", "熊本県"], ["大分県", "大分県"], ["宮崎県", "宮崎県"], ["鹿児島県", "鹿児島県"], ["沖縄県", "沖縄県"]],{} , class: "right-content__identification__body__form-group__select-wrap__select-box"
          .right-content__identification__body__form-group
            = f.label "市区町村"
            %span.right-content__identification__body__form-group__arbitrary 任意
            = f.text_field :city, placeholder: "例) 横浜市緑区", class: "right-content__identification__body__form-group__input"
          .right-content__identification__body__form-group
            = f.label "番地"
            %span.right-content__identification__body__form-group__arbitrary 任意
            = f.text_field :address, placeholder: "例) 青山1−1−1", class: "right-content__identification__body__form-group__input"
          .right-content__identification__body__form-group
            = f.label "建物名"
            %span.right-content__identification__body__form-group__arbitrary 任意
            = f.text_field :building_name, placeholder: "例) 柳ビル103", class: "right-content__identification__body__form-group__input"
          = f.submit "登録する", class: "right-content__identification__body__btn right-content__identification__body__btn--red"
          .right-content__identification__body__form-group.right-content__identification__body__form-group__text-right
            %p
              %a{href: "#", target: "_blank"}
                本人情報の登録について
                = fa_icon 'chevron-right',class:'arrow-icon'
    
    = render "shared/sidebar/sidebar"
  = render "shared/top_page/asaide"
  = render "shared/top_page/footer"