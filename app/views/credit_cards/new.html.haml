= render "shared/top_page/header"
= render "shared/top_page/sel_button"
.my-container
  .cards-contents
    %h2.cards-contents__head クレジットカード情報入力
    .cards-contents__detail
      = form_tag(pay_credit_cards_path, method: :post, id: 'charge-form',  name: "inputForm") do
        .cards-contents__detail-contet
          .cards-contents__detail-contet-number
            %label.payment-card-no カード番号
            %span.form-reqire 必須
            = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
            %ul.card-logo
              %li
                = image_tag "visa.svg", size:"49x20", class: "card-logo-img"
              %li
                = image_tag "master_card.svg", size:"34x20", class: "card-logo-img"
              %li
                = image_tag "saison-card.svg", size:"30x20", class: "card-logo-img"
              %li
                = image_tag "jcb.svg", size:"32x20", class: "card-logo-img"
              %li
                = image_tag "american_express.svg", size:"21x20", class: "card-logo-img"
              %li
                = image_tag "dinersclub.svg", size:"32x20", class: "card-logo-img"
              %li
                = image_tag "discover.svg", size:"32x20", class: "card-logo-img"
          .cards-contents__detail-contet-limit
            %label 有効期限
            %select#exp_month{name: "exp_month", class: "exp_month", type: "text"}
              %option{value: ""} --
              %option{value: "1"}01
              %option{value: "2"}02
              %option{value: "3"}03
              %option{value: "4"}04
              %option{value: "5"}05
              %option{value: "6"}06
              %option{value: "7"}07
              %option{value: "8"}08
              %option{value: "9"}09
              %option{value: "10"}10
              %option{value: "11"}11
              %option{value: "12"}12
            %span 月/
            %select#exp_year{name: "exp_year", class: "exp_year", type: "text"}
              %option{value: ""} --
              %option{value: "2019"}19
              %option{value: "2020"}20
              %option{value: "2021"}21
              %option{value: "2022"}22
              %option{value: "2023"}23
              %option{value: "2024"}24
              %option{value: "2025"}25
              %option{value: "2026"}26
              %option{value: "2027"}27
              %option{value: "2028"}28
              %option{value: "2029"}29
            %span 年
            %br
          .cards-contents__detail-contet-cvc
            %label セキュリティコード
            = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
          .cards-contents__detail-contet-btn
            #card_token
            %button#token_submit{type: "button"} 追加する
            -# = submit_tag "追加する", id: "token_submit"
  = render "shared/sidebar/sidebar"
= render "shared/top_page/asaide"
= render "shared/top_page/footer"